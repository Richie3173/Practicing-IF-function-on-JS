//Compare weights with using IF functions

const markWeightTest1 = 78;
const markHeightTest1 = 1.69;

const johnWeightsTest1 = 92;
const johnHeightTest1 = 1.95;

const markBmi1 = markWeightTest1/markHeightTest1**2;
const johnBmi1 = johnWeightsTest1/johnHeightTest1**2;

const markHigherBmi = markBmi1 > johnBmi1;

console.log(markHigherBmi)

if(markBmi1 > johnBmi1){
console.log("Mark`s BMI is higher than John's");
} else {
console.log("John's BMI is higher than Mark'S")
}

const markBmi = 28.3;
const johnBmi = 23.9;

const bmiValue = `Mark's BMI (${markBmi}), is higher than John's (${johnBmi})`

console.log(bmiValue)

//work out avg with if function
const scoreDolphins = (96+108+89)/3;
const scoreKoalas = (88+91+110)/3;

if(scoreDolphins > scoreKoalas){
    console.log('Dolphins win the trophy');
}else if (scoreKoalas > scoreDolphins){
    console.log ('Koalas min the trophy');
}else if (scoreDolphins === scoreKoalas){
    console.log('Its a draw!');
}

//&& practice

const dolphins = (97+112+80)/3;
const koalas = (109+95+50)/3;


if(dolphins > koalas && dolphins >= 100){
    console.log('Dolphins win the trophy');
}else if (koalas > dolphins && koalas >= 100){
    console.log ('Koalas min the trophy');
}else if (dolphins === koalas && dolphins >= 100 && koalas >= 100){
    console.log('Its a draw!');
}else{
    console.log('No one wins!');
}
